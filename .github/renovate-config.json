{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "separateMinorPatch": true,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**"
  ],
  "customDatasources": {
    "thunderbird": {
      "defaultRegistryUrlTemplate": "https://ftp.mozilla.org/pub/thunderbird/releases/",
      "format": "html",
      "transformTemplates": [
        "{ \\\"releases\\\": $filter($.*.href, function($v) { $contains($v, '/releases/') and $contains($v, '.') and not $contains($v, 'rc') and not $contains($v, 'b') and not $contains($v, 'esr') }).{ \\\"version\\\": $replace($, /^\\\\/pub\\\\/thunderbird\\\\/releases\\\\/([\\\\d\\\\.]+)\\\\/$/, '$1') } }"
      ]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^addon/manifest\\.json$"],
      "matchStrings": [
        "\"strict_max_version\":\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "custom.thunderbird",
      "depNameTemplate": "thunderbird-max-version",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "^(?<version>\\d+\\.\\d+(?:\\.\\d+)?)/$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["custom.thunderbird"],
      "extractVersion": "^(?<version>\\d+(?:\\.\\d+)*?)\\/$"
    },
    {
    "matchUpdateTypes": ["patch"],
    "groupName": "all patch updates",
    "automerge": true
    }
  ],
  "repositories": [ "beltrachi/automatic_dictionary" ]
}
