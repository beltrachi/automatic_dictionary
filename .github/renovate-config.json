{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "separateMinorPatch": true,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**"
  ],
  "customDatasources": {
    "thunderbird": {
      "defaultRegistryUrlTemplate": "https://ftp.mozilla.org/pub/thunderbird/releases/",
      "format": "html",
      "transformTemplates": [
        "{ \"releases\": $map($filter($.releases, function($v) { $not($contains($v.version, 'esr')) and $not($contains($v.version, 'rc')) and $not($contains($v.version, '..')) and $not($contains($v.version, 'latest')) and $not($contains($v.version, 'custom')) }), function($v) { { 'version': $replace($v.version, /^\\[(.+)\\/\\]$/, '$1') } }) }"
      ]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^addon/manifest\\.json$"],
      "matchStrings": [
        "\"strict_max_version\":\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "custom.thunderbird",
      "depNameTemplate": "thunderbird-max-version",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
    "matchUpdateTypes": ["patch"],
    "groupName": "all patch updates",
    "automerge": true
    }
  ],
  "repositories": [ "beltrachi/automatic_dictionary" ]
}
