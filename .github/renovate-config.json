{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "separateMinorPatch": true,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**"
  ],
  "customDatasources": {
    "thunderbird": {
      "defaultRegistryUrlTemplate": "https://ftp.mozilla.org/pub/thunderbird/releases/",
      "format": "html",
      "transformTemplates": [
        "{\"releases\": [$.*.href ~> $filter(function($v) { $v ~> $contains('/releases/') and $v ~> $contains('.') and not $v ~> $contains('rc') and not $v ~> $contains('b') }) ~> $map(function($v) { {\"version\": $replace($v, /^.*\\/releases\\/([\\d\\.]+)\\/$/, '$1')} })]}"
      ]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^addon/manifest\\.json$"],
      "matchStrings": [
        "\"strict_max_version\":\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "custom.thunderbird",
      "depNameTemplate": "thunderbird-max-version",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "^(?<version>\\d+\\.\\d+(?:\\.\\d+)?)/$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["custom.thunderbird"],
      "extractVersion": "^(?<version>\\d+\\.\\d+(?:\\.\\d+)?)/$"
    },
    {
    "matchUpdateTypes": ["patch"],
    "groupName": "all patch updates",
    "automerge": true
    }
  ],
  "repositories": [ "beltrachi/automatic_dictionary" ]
}
